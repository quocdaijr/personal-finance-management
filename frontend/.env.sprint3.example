# Sprint 3: Real-time Features & Notifications - Frontend Configuration
# Copy values to your .env file

# ==========================================
# Firebase Configuration (for Push Notifications)
# ==========================================
# Get these from Firebase Console: https://console.firebase.google.com
# Project Settings > General > Your apps > Firebase SDK snippet > Config

VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# VAPID Key for Web Push (Cloud Messaging > Web configuration)
VITE_FIREBASE_VAPID_KEY=your-vapid-key-here

# ==========================================
# WebSocket Configuration
# ==========================================
# Development
VITE_WS_URL=ws://localhost:8080

# Production (uncomment and modify for production)
# VITE_WS_URL=wss://api.yourapp.com

# WebSocket Reconnection Settings
VITE_WS_MAX_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000  # milliseconds

# ==========================================
# Notification Settings
# ==========================================
VITE_NOTIFICATION_SOUND_ENABLED=true
VITE_NOTIFICATION_POSITION=top-right  # top-left, top-right, bottom-left, bottom-right

# ==========================================
# Real-time Features
# ==========================================
VITE_REALTIME_ANALYTICS_ENABLED=true
VITE_ACTIVITY_FEED_ENABLED=true
VITE_LIVE_BALANCE_UPDATES=true

# ==========================================
# Existing Configuration (keep from original .env)
# ==========================================
VITE_API_URL=http://localhost:8080
VITE_ANALYTICS_URL=http://localhost:8000
VITE_APP_VERSION=1.0.0

# ==========================================
# Service Worker Configuration
# ==========================================
VITE_SW_ENABLED=true  # Enable/disable service worker
VITE_SW_UPDATE_INTERVAL=3600000  # Check for updates every hour (ms)

# ==========================================
# Development Tools
# ==========================================
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_WS_DEBUG=true  # Enable WebSocket debug logging
